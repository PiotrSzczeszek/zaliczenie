@code {

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    private bool isMenuOpen = false;

    private string MenuCssClass => isMenuOpen ? "shown" : "hidden";

    private void ToggleMenu()
    {
        isMenuOpen = !isMenuOpen;
    }

}

<div class="nav-item">
    <div class="nav-group mx-3">
        <div class="nav-group-title text-light" @onclick="ToggleMenu">
            <span class="@Icon" aria-hidden="true"></span> @Title
        </div>
        <div class="@MenuCssClass">
            @ChildContent
        </div>
    </div>
</div>